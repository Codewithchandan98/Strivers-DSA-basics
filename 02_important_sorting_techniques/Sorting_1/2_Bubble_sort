def optimized_bubble_sort(arr):
    n = len(arr)

    #edge case : empty or single-element list
    if n <=1 :
        return arr
    
    for i in range(n-1):
        swapped = False #track if any swaps happen in this pass

        for j in range(0, n-i-1):
            if arr[j] > arr[j+1]:
                arr[j], arr[j+1] = arr[j+1], arr[j]
                swapped = True

        if not swapped :
            break


    return arr


arr = list(map(int, input("Enter numbers seperated by space:").split()))
sorted_arr = optimized_bubble_sort(arr)
print("sorted array:", sorted_arr)